    <style name="TextViewStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColorHint">@color/colorPalePink</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorCoral</item>
    </style>

    <style name="HeaderEditTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColorHint">@color/colorPalePink</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorCoral</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/colorCoral</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>
